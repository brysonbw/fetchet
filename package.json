{
  "name": "fetchet",
  "version": "0.2.1",
  "description": "The compact, Promise-based, and browser-native HTTP fetch wrapper",
  "type": "module",
  "main": "./dist/cjs/fetchet.cjs",
  "module": "./dist/esm/fetchet.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": {
        "require": "./dist/index.d.cts",
        "default": "./dist/index.d.ts"
      },
      "browser": {
        "require": "./dist/browser/fetchet.global.cjs",
        "default": "./dist/esm/fetchet.js"
      },
      "default": {
        "require": "./dist/cjs/fetchet.cjs",
        "default": "./dist/esm/fetchet.js"
      }
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build:full": "npm run build && npm run docs",
    "build": "tsup --env.NODE_ENV production",
    "test": "vitest run",
    "test:fetchet": "vitest run ./src/tests/fetchet.test.ts",
    "test:utils": "vitest run ./src/tests/utils.test.ts",
    "coverage": "vitest run --coverage",
    "lint": "eslint . --ext .js",
    "format": "prettier --write .",
    "docs": "typedoc --plugin typedoc-plugin-markdown",
    "release": "release-it",
    "release:dry": "release-it --dry-run --no-npm",
    "release:info": "release-it --release-version",
    "release:changelog:fix": "auto-changelog -p && git add CHANGELOG.md",
    "size": "size-limit --json > size-report.json"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/brysonbw/fetchet.git"
  },
  "keywords": [
    "xhr",
    "http",
    "ajax",
    "promise",
    "fetch API",
    "fetch"
  ],
  "author": "Bryson Ward",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/brysonbw/fetchet/issues"
  },
  "homepage": "https://github.com/brysonbw/fetchet",
  "contributors": [
    "Bryson Ward (https://github.com/brysonbw)"
  ],
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@release-it/conventional-changelog": "^10.0.1",
    "@size-limit/file": "^11.2.0",
    "@swc/core": "^1.13.3",
    "@types/eslint-plugin-security": "^3.0.0",
    "@types/node": "^24.1.0",
    "@vitest/coverage-v8": "^3.2.4",
    "auto-changelog": "^2.5.0",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsdoc": "^52.0.2",
    "eslint-plugin-prettier": "^5.5.3",
    "eslint-plugin-security": "^3.0.1",
    "jsdom": "^26.1.0",
    "release-it": "^19.0.4",
    "size-limit": "^11.2.0",
    "tsup": "^8.5.0",
    "typedoc": "^0.28.9",
    "typedoc-plugin-markdown": "^4.8.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.38.0",
    "vitest": "^3.2.4"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore(release): v${version}",
      "push": true,
      "commit": true,
      "tag": true,
      "requireCommits": false,
      "requireCleanWorkingDir": false
    },
    "github": {
      "release": true,
      "draft": true
    },
    "npm": {
      "publish": false,
      "ignoreVersion": false
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular",
        "infile": "CHANGELOG.md",
        "header": "# Changelog"
      }
    },
    "hooks": {
      "before:init": [
        "npm run lint",
        "npm run test"
      ],
      "after:bump": "npm run build:full && git add ./dist ./docs/api-reference ./package-lock.json",
      "before:release": "npm run release:changelog:fix",
      "after:release": "echo Successfully released ${name} v${version} to ${repo.repository}."
    }
  },
  "auto-changelog": {
    "breakingPattern": "Breaking change"
  },
  "typedocOptions": {
    "entryPoints": [
      "src/index.ts"
    ],
    "out": "docs/api-reference",
    "readme": "none",
    "name": "fetchet API Reference"
  },
  "size-limit": [
    {
      "path": "dist/browser/fetchet.min.cjs",
      "name": "Browser build (IIFE/UMD)",
      "limit": "5kB",
      "gzip": true
    },
    {
      "path": "dist/cjs/fetchet.min.cjs",
      "name": "Browser build (CJS)",
      "limit": "5kB",
      "gzip": true
    },
    {
      "path": "dist/esm/fetchet.min.js",
      "name": "Browser build (ESM)",
      "limit": "5kB",
      "gzip": true
    }
  ]
}
